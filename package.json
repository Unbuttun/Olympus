{
  "name": "olympus",
  "version": "0.0.1",
  "description": "The modern full-stack Next.js & GraphQL boilerplate with user authentication, subscription payments, emails and everything else you need ",
  "main": "index.js",
  "repository": "https://github.com/Unbuttun/Olympus.git",
  "author": "UnButtun <unbuttun@gmail.com>",
  "dependencies": {
    "@prisma/client": "2.19.0",
    "@yarnpkg/pnpify": "3.0.0-rc.3",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.9.0",
    "npm-run-all": "^4.1.5",
    "prisma": "2.19.0",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.2.0",
    "type-graphql": "^1.1.1"
  },
  "private": true,
  "workspaces": [
    "gaia",
    "packages/*",
    "athena"
  ],
  "scripts": {
    "dev": "run-p gaia:dev athena:dev",
    "athena:dev": "yarn athena dev",
    "gaia:dev": "yarn gaia dev",
    "gaia": "yarn workspace @olympus/gaia",
    "gaia-dev": "run-s generate:prisma gaia:dev",
    "athena-dev": "run-s generate:urql athena:dev",
    "athena": "yarn workspace @olympus/athena",
    "tg": "yarn workspace @olympus/tg",
    "client": "yarn workspace @olympus/prisma",
    "eslint": "eslint --color --ext .ts,.tsx",
    "eslint:fix": "yarn eslint -- --fix",
    "docker": "docker-compose up",
    "studio": "yarn dlx prisma studio",
    "db": "run-p docker studio",
    "generate:prisma": "yarn prisma generate && echo \"ðŸš€ Prisma Client generated\"",
    "generate:urql": "yarn athena gen && echo \"ðŸš€ URQL types generated\"",
    "generate": "run-p generate:prisma generate:urql"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/eslint": "^7.2.9",
    "@types/graphql-fields": "^1.3.3",
    "@types/node": "^14.14.37",
    "@types/prettier": "^2.2.3",
    "eslint": "^7.24.0",
    "eslint-config-galex": "^2.14.1",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "typegraphql-prisma": "^0.12.0",
    "typescript": "^4.2.4"
  }
}
