{
  "name": "olympus",
  "version": "0.0.1",
  "description": "The modern full-stack Next.js & GraphQL boilerplate with user authentication, subscription payments, emails and everything else you need ",
  "main": "index.js",
  "repository": "https://github.com/Unbuttun/Olympus.git",
  "author": "UnButtun <unbuttun@gmail.com>",
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier-format",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "prettier:format": "prettier --config .prettierrc '**/**/*.ts' --write",
    "eslint": "eslint --color --ext .ts,.tsx",
    "eslint:fix": "yarn eslint -- --fix",
    "athena": "yarn workspace @olympus/athena",
    "gaia": "yarn workspace @olympus/gaia",
    "nyx": "yarn workspace @olympus/nyx",
    "dev": "yarn athena dev && yarn nyx dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "eslint-config-adjunct": "^4.11.0",
    "eslint-config-prettier": "^8.1.0",
    "prettier": "^2.2.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "license": "UNLICENSED"
}
